{
  "name": "glTF-Viewer",
  "version": "1.0.0",
  "devDependencies": {
    "eslint": "^7.3.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rollup": "^2.18.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^6.1.0",
    "svelte": "^3.0.0",
    "workbox-cli": "^5.1.3"
  },
  "dependencies": {
    "@google/model-viewer": "^0.10.0",
    "sirv-cli": "^1.0.1"
  },
  "scripts": {
    "workbox": "workbox generateSW",
    "build": "cp manifest.json .\/public\/manifest.json && npm run workbox && rollup -c",
    "build:GP": "cp manifest.GP.json .\/public\/manifest.json && npm run workbox && rollup -c",
    "autobuild": "npm run workbox && rollup -c -w",
    "dev": "run-p start:dev autobuild",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev",
    "lint": "eslint --fix \"{,!(node_modules|public)/**/}*.{js,svelte}\"",
    "prettier": "prettier --write \"{,!(node_modules|public)/**/}*.{js,svelte}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && git add . && npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flameddd/glTF-Viewer"
  }
}
